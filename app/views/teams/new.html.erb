
<div align="center">
<%if current_user.editor %>


<h1>Nova Equipe</h1>

<%= form_for(@team) do |f| %>
  

  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :title%>
  </div>
  <br>

  <div class="field">
    <%= f.label :descrição %> <br>
    <%= f.text_area :description, cols: "50", rows: "10"%>
  </div>

  <div class="actions">
    <%= f.submit "Criar Equipe", class: "btn btn-primary" %>
  </div>
<% end %>


<%= link_to 'Voltar', teams_path %>

<%else%>
<h2>Você não está autorizado a acessar o conteúdo dessa página.</h2>
<%= link_to 'Voltar', teams_path %>
<%end%>

</div>