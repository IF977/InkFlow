<style>


</style>

<div>
<h1><strong>
Equipes
</strong></h1>

<div align="center">
<%if @teams.empty?%>
<h2>Não existem equipes criadas para serem exibidas. Clique no botão abaixo para começar a criar.</h2>
<%end%>
<%= button_to new_team_path, method: :get, class: "btn btn-primary", title:"Criar Equipe" do %>
<span class="glyphicon glyphicon-plus-sign"></span>
<%end%>

</div>
</div>
<br>

<% linhas = ((@teams.count) / 3.0).ceil  %>
<%contagem = 0%>
<%for i in 1..linhas%>
  <div class="row">
    <div class="col-md-12">
  <%for p  in 1..3 %>
    <%if contagem < @teams.count%>
    <%team = @teams[contagem]%> 
    <div class="col-md-4" >
      <div class="panel panel-primary">
          <div class="panel-heading">
             <h4><strong><%= team.title %></strong></h4>
          </div>
          <div class="panel-collapse collapse in">
            <div class="panel-body">
                <p><%= simple_format(team.description) %></p>
            </div>  
            </div>
        <div class="panel-footer">
        <div class="row">
        <div class="col-md-12">
        <div class="col-md-9">
        </div>
        <div class="col-md-1">
        <%= button_to team, method: :get, class: "btn btn-default", title:"Entrar na Equipe" do %>
        <span class="glyphicon glyphicon-log-in"></span>
        <%end%></div> 
        <div class="col-md-1">
        <%= button_to edit_team_path(team), method: :get, class: "btn btn-default", title:"Editar Equipe" do  %>
        <span class="glyphicon glyphicon-pencil"></span>
        <%end%> </div>
        <div class="col-md-1">
        <%= button_to team, method: :delete, class: "btn btn-default", data: { confirm: 'Tem certeza?' }, title:"Remover Equipe"  do%>
        <span class="glyphicon glyphicon-remove"></span>
        <%end%></div>
                </div>
              </div>
            </div>
            </div>
          
    </div>
    <%contagem += 1%>
    <%end%>
  <%end%>
    </div>
  </div>
<%end%>
