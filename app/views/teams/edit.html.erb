<div align="center">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/teams">Equipes</a></li>
    <li class="breadcrumb-item active"><strong>Equipe: <em><%=@team.title%></em></strong></li>
  </ol>
</div>

<div align="center">
<%if current_user.editor %>
<h1>Editar Equipe</h1>

<%= form_for(@team) do |f| %>
  
  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :title%>
  </div>
  <br>

  <div class="field">
    <%= f.label :descrição %> <br>
    <%= f.text_area :description, cols: "50", rows: "10"%>
  </div>

  <div class="actions">
    <%= f.submit "Atualizar Equipe", class: "btn btn-primary" %>
  </div>
<% end %>


<%= link_to 'Mostrar', @team %> |
<%= link_to 'Back', teams_path %>

<%else%>
<h2>Você não está autorizado a acessar o conteúdo dessa página.</h2>
<%= link_to 'Voltar', teams_path %>
<%end%>
</div>