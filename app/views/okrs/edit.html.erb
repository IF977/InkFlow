
<div align="center">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/teams">Equipes</a></li>
    <li class="breadcrumb-item "><a href="/teams/<%=@team.id%>/okrs">Equipe: <em><%=@team.title%></em></a></li>
    <li class="breadcrumb-item active"><strong>OKR: <em><%=@okr.title%></em></strong></li>
  </ol>
</div>


<div align="center">
<%if current_user.editor%>
<h1>Editar OKR</h1>

<%= form_for([@team, @okr]) do |f| %>

  <div class="field">
    <%= f.label :título %><br>
    <%= f.text_field :title %>
  </div>
  <br>
  <div class="field">
    <%= f.label :descrição %> <br>
    <%= f.text_area :description, cols: "50", rows: "10" %>
  </div>

  <div class="field">
    <%= f.hidden_field :team_id %>
    <%= f.hidden_field :team_id %>
  </div>

  <div class="actions">
    <%= f.submit "Atualizar OKR", class: "btn btn-primary"  %>
  </div>
<% end %>
<%= link_to 'Back', team_okrs_path %>
<%else%>
<h2>Você não está autorizado a acessar o conteúdo dessa página.</h2>
<%= link_to 'Voltar', team_okrs_path %>
<%end%>
</div>