<div align="center">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/teams">Equipes</a></li>
    <li class="breadcrumb-item active"><strong>Equipe: <em><%=@team.title%></em></strong></li>
  </ol>
</div>

<div align="center">
<%if current_user.editor %>
<h1>Novo OKR</h1>

<%= form_for([@team, @team.okrs.build]) do |f| %>

 <div class="field">
    <%= f.label :título %><br>
    <%= f.text_field :title %>
  </div>
  <br>
  <div class="field">
    <%= f.label :descrição %> <br>
    <%= f.text_area :description, cols: "50", rows: "10" %>
  </div>

  <div class="field">
    <%= f.hidden_field :team_id %>
    <%= f.hidden_field :team_id %>
  </div>

  <div class="actions">
    <%= f.submit "Criar OKR", class: "btn btn-primary"  %>
  </div>
<% end %>

<%= link_to 'Voltar', team_okrs_path %>
<%else%>
<h2>Você não está autorizado a acessar o conteúdo dessa página.</h2>
<%= link_to 'Voltar', team_okrs_path %>
<%end%>

</div>
