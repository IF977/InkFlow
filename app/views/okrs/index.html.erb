<p id="notice"><%= notice %></p>

<h1>OKR</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @okrs.each do |okr| %>
      <tr>
        <td><%= okr.title %></td>
        <td><%= okr.description %></td>
        <td><%= button_to 'Show', okr, method: :get %></td>
        <td><%= button_to 'Edit', edit_okr_path(okr), method: :get%></td>
        <td><%= button_to 'Destroy', okr, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Okr', new_okr_path, method: :get%>
