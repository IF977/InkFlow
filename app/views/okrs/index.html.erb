


<h1>OKR</h1>

<table style="width:100%">
  <thead>
    <tr>
      <th style="color:purple";>Title</th>
      <th style="color:purple";>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @okrs.each do |okr| %>
      <tr>
        <td><%= okr.title.first(15) %></td>
        <td><%= okr.description.first(15) %></td>
        <td><%= button_to 'Show', okr, method: :get %></td>
        <td><%= button_to 'Edit', edit_okr_path(okr), method: :get%></td>
        <td><%= button_to 'Destroy', okr, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br>
<br>
<%= button_to 'New Okr', new_okr_path, method: :get%>
