<div class="row clearfix">
	<% if kr.completed? %>
	<div class="complete">
		<%= link_to "Mark as Complete", complete_okr_kr_path(@okr, kr.id), method: :patch %>	
	</div>
	<div class="kr">
		<p style="opacity: 0.4"><strike><%= kr.content %></strike></p>
	</div>
	<div class="trash">
		<%= link_to "Delete", okr_kr_path(@okr, kr.id), method: :delete, data: {confirm: "Are you sure?"}%>
	</div>
	<%else%>
	<div class="complete">
		<%= link_to "Mark as Complete", complete_okr_kr_path(@okr, kr.id), method: :patch %>	
	</div>
	<div class="kr">
		<p><%= kr.content %></p>
	</div>
	<div class="trash">
	<%= link_to "Delete", okr_kr_path(@okr, kr.id), method: :delete, data: {confirm: "Are you sure?"}%>
	</div>
	<%end%>
	

</div>