						<p><strong>Progesso do KR: <%= @kr.progress %>%</strong></p>
						<hr>
						<div align="center">
						<%if current_user.editor %>
						<%= link_to 'Editar', edit_team_okr_kr_path(@team, @okr, @kr), class: "btn btn-primary" %> 
						<%end%>
						<%= link_to 'Voltar', team_okr_krs_path, class: "btn btn-primary" %>
						</div>						
					</div>
				</div>
			<div class="col-md-2">			
			</div>
		</div>
	</div>
</div>

  